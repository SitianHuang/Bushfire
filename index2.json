{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
        "width":800,
        "height":500,
        "title":"The Temperature and Cause of Bushfire in Victoria",
        "data":{"url":"https://raw.githubusercontent.com/SitianHuang/Bushfire/main/bushfire.csv"},
        "params":[
            {"name":"Cause_of_Fire_Selection",
            "bind":{"input":"select",
                    "options":[
                        null,
                        "accident",
                        "burning_off",
                        "lightning"],
                        "labels":[
                            "Show All",
                            "Accident",
                            "Burning Off",
                            "Lightning"
                        ],
                        "name":"Cause of Fire Selection: "}}],
        "transform":[
            {"filter":"Cause_of_Fire_Selection == null|| datum.Category==Cause_of_Fire_Selection"}],
        "encoding":{
            "x":{
                "field":"amaxt28",
                "type":"quantitative",
                "title":"Average maximum temperature",
                "axis":{"tickCount":7}
                },
            "y":{
                "field":"amint28",
                "type":"quantitative",
                "title":"Average minimum temperature",
                "axis":{"tickCount":6}
            }
        },
        "layer":[{
            "mark":"circle",
            "encoding":{
            "color":{
                "field":"Category",
                "type":"nominal",
                "title":"Cause of Fire",
                "scale":{
                    "domain":[
                        "accident",
                        "burning_off",
                        "lightning"
                    ],
                    "range":[
                        "#377eb8",
                        "#e41a1c",
                        "#ff7f00" 
                    ]
                }
            },
            "tooltip":[
                {"field":"Category","type":"nominal","title":"Cause of Fire"},
                {"field":"amaxt28","type":"quantitative","title":"Average maximum temperature"},
                {"field":"amint28","type":"quantitative","title":"Average minimum temperature"}
            ]
        }},
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {"field": "FOR_TYPE", "type": "nominal"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                        "test": "datum['FOR_TYPE'] == 'Rainforest'",
                        "value": 1
                    },
                "value": 0
        },
        "tooltip":[
            {"field":"Category","type":"nominal","title":"Cause of Fire"},
            {"field":"amaxt28","type":"quantitative","title":"Average maximum temperature"},
            {"field":"amint28","type":"quantitative","title":"Average minimum temperature"}]
            }
        }]
}